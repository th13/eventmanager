doctype 5
html(lang="en")
    head
        title= title
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        // Google Open Sans Lite
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300', rel='stylesheet', type='text/css')

        // Bootstrap core
        link(rel="stylesheet", href="/assets/css/bootstrap.min.css")
        
        // Custom styles
        link(rel="stylesheet", href="/assets/css/navbar-fixed-top.css")
        link(rel="stylesheet", href="/assets/css/navbar-light-blue.css")
        link(rel="stylesheet", href="/assets/css/sticky-footer.css")
        link(rel="stylesheet", href="/assets/css/fonts.css")

    body

        // Wrap all page content
        #wrap 
            // Fixed navbar
            div(class="navbar navbar-inverse navbar-fixed-top")
                .container
                    .navbar-header
                        button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
     
                        a.navbar-brand(href="#") Events Manager

                    div(class="navbar-collapse collapse")
                        ul(class="nav navbar-nav")
                            if active === "index"
                                li.active
                                    a(href="/")
                                        span(class="glyphicon glyphicon-home")
                            else
                                li
                                    a(href="/")
                                        span(class="glyphicon glyphicon-home")
                            if active == "eventslist"
                                li.active: a(href="/events") Events
                            else
                                li: a(href="/events") Events
                            if active == "newevent"
                                li.active: a(href="/events/new") Add Event
                            else
                                li: a(href="/events/new") Add Event 

                            li.dropdown
                                a(href="#", class="dropdown-toggle", data-toggle="dropdown") Dropdown 
                                    b.caret
                                ul.dropdown-menu
                                    li: a(href="#") Action
                                    li: a(href="#") Another action
                                    li: a(href="#") Something else here
                                    li.divider
                                    li.dropdown-header Users Management
                                    li: a(href="/users") View All
                                    li: a(href="/users/new") Add New
            
            block content

        .footer
            .container
                p(class="text-muted credit").
                    &copy; 2013 Trevor Helms (& Diva)


        // jQuery
        script(src="//code.jquery.com/jquery.js")

        // JavaScript plugins
        script(src="/assets/js/bootstrap.min.js")


        script(src="/assets/js/userdelete.js")
